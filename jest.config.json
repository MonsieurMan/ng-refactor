{
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.spec.json"
        }
    },
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "collectCoverage": true,
    "testRegex": "(src/test/.*|(\\.|/)(spec))\\.spec.ts$",
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ],
    "moduleDirectories": [
        "node_modules"
    ]
}