{
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.json"
        }
    },
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.ts"
    ],
    "testRegex": "(/test/.*|(\\.|/)(spec))\\.spec.ts$",
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ]
}